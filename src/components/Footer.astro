---
import { Image } from 'astro:assets';
import logo from '../assets/Logo.png'
import logoIcon from '../assets/png/Logo.png'

---
<div class="footer-wrapper">
    <div class='footer-container'>
        <Image src={logoIcon} alt="logoimage" loading="eager"/>
        <p class='heading'>
            Create detailed meshes, beautiful textures, and lively animations, all in one place!
        </p>

        <button class='gradient-button'>
            Get started for free
        </button>
    </div>
    <div class="footer-navigation">
        <a href="/"><Image src={logo} alt="logoimage" loading="eager" /></a>
        <div class="links-container">
            <a href="a" class="link">Documentation</a>
            <a href="a" class="link">Dungeon Generator</a>

        </div>
        <div class="links-container">
  
            <a href="a" class="link">Privacy Policy</a>
            <a href="a" class="link">Terms of Service Â© 2024 Charmed</a>
        </div>
    </div>
</div>

<style >
	.footer-wrapper{
        display: flex;
        width: 100%;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        position: relative;
        min-height: 98vh;
        &::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background-image: url('../assets/png/background.webp');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }
	}


	.footer-container {
		display: flex;
		max-width: 1000px;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 16px;
		flex-shrink: 0;
		z-index: 1;
	}

	.heading {
		color: #fff;
		text-align: center;
		font-family: Satoshi;
		font-size: 48px;
		font-style: normal;
		font-weight: 500;
		line-height: 56px;
		letter-spacing: -0.48px;
		z-index: 1;
	}
    
	.secondary {
		font-size: 20px;
		color: #9f9aab;
		width: 80%;
		align-items: center;
		text-align: center;
		margin-top: 8px;
		z-index: 1;
	}
    
    .footer-navigation{
        display: flex;
        width: calc(100% - 80px);
        padding: 16px 40px;
        justify-content: space-between;
        align-items: center;
        z-index: 2;
    }

    @media (max-width: 1000px) {
        .footer-navigation{
            flex-direction: column;
            gap: 24px;
        }
    }

    @media (max-width: 768px) {
        .footer-navigation{
            width: auto;
            padding: 16px 5px;
        }
        .secondary {
            font-size: 16px;
			font-style: normal;
			font-weight: 500;
			line-height: 24px;
		}
        .heading {
            font-size: 24px;
			font-style: normal;
			font-weight: 500;
			line-height: 32px;
			letter-spacing: -0.24px;
		}
    }

    .link {
		color: #d1cdda;
		font-family: Satoshi;
		font-size: 14px;
		font-style: normal;
		font-weight: 500;
		line-height: 20px;
		letter-spacing: 0.07px;
		text-decoration: none;
	}

	.links-container {
		display: flex;
		align-items: center;
		gap: 16px;
	}

</style>
