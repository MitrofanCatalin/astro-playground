---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		background-color:  '#15101D';
		display: flex;
		/* width: min(calc(100% - 320px), 1120px); */
		padding: 40px 160px;
		flex-direction: column;
		align-items: center;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #15101D;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	
	.blur {
		position: absolute;
		width: 1000px;
		height: 1000px;
		pointer-events: none;

		background: radial-gradient(
			closest-side,
			${(props: any) => props.theme.palette.primary.main} 0%,
			${(props: any) => props.theme.palette.secondary.main}88 70%,
			${(props: any) => props.theme.palette.primary.main}00
		);

		opacity: 0.3;

		&.top {
			left: -600px;
			top: -600px;
		}

		&.bottom {
			right: -600px;
			bottom: -600px;
			z-index: 12;
		}
	}

	.gradient-button {
		padding: 16px 32px;
		gap: 8px;
		height: 60px;
		background: linear-gradient(90deg, #fb923c 0%, rgba(251, 146, 60, 0.64) 100%);
		&:hover {
			background-image: linear-gradient(
				to right,
				${(props) => props.theme.palette.primary.main}DD,
				rgba(251, 146, 60, 0.6)
			);
		}

		color: #131313;
		font-family: Satoshi;
		font-size: 18px;
		font-style: normal;
		font-weight: 700;
		line-height: 28px;
	}

	.topbar-wrapper {
		display: flex;
		padding: 24px;
		justify-content: center;
		position: relative;
		z-index: 10;

		@media (max-width: 768px) {
			padding: 12px 24px;
		}
		@media (max-width: 450px) {
			padding: 6px 24px;
		}
	}

	.wrapper-class {
		display: flex;
		margin-left: 20%;
		gap: 150px;
	}

	.section-wrapper {
		position: relative;
		height: 650vh;
	}
